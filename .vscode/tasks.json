{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile Raylib",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "main.c",
          "-o", "game.exe",
          "-I", "C:/raylib/include",
          "-L", "C:/raylib/lib",
          "-lraylib",
          "-lopengl32",
          "-lgdi32",
          "-lwinmm"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  